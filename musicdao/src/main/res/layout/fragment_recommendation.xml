<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryPlayer"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/fab_margin">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshRecommend"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/recommend_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:justifyContent="space_evenly">
            <TextView
                android:id="@+id/loadingRecommendations"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="Recommendations will appear here once you've listened to some tunes"
                android:textColor="@color/white" />
        </com.google.android.flexbox.FlexboxLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
